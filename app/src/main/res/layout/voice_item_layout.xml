<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/chat_item_left"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center|left"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/chat_item_head_img_left"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:scaleType="fitCenter"
            android:src="@mipmap/ic_launcher" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:background="@drawable/chat_item_back_noself"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/chat_item_content_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:scaleType="fitStart"
                android:src="@drawable/ic_hearing_black_24dp"
                tools:layout_width="100dp" />
        </LinearLayout>

        <TextView
            android:id="@+id/message_time_left"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:textSize="15sp"
            tools:text="12.33" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/chat_item_right"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right|center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/message_time_right"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:textSize="15sp"
            tools:text="12.33" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:background="@drawable/chat_item_back_self"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/chat_item_content_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="99"
                android:padding="10dp"
                android:scaleType="fitEnd"
                android:src="@drawable/ic_hearing_black_24dp"
                android:textColor="#000" />
        </LinearLayout>

        <ImageView
            android:id="@+id/chat_item_head_img_right"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="right"
            android:scaleType="centerCrop"
            android:src="@mipmap/ic_launcher" />

    </LinearLayout>

</LinearLayout>